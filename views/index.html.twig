{% extends "layout.html.twig" %}
{% block content %}
<header>
    <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
                <li data-target="#carousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active"> <img src="{{ asset('/assets/img/img2.jpg') }} " alt="alaska"></div>
                <div class="item"> <img src=" {{asset('/assets/img/img1.jpg')}} " alt="alaska"></div>
                <div class="item"> <img src=" {{asset('/assets/img/img3.jpg')}} " alt="alaska"></div>
                <div class="item"> <img src=" {{asset('/assets/img/img4.png')}} " alt="alaska"></div>
            </div>
                <a class="left carousel-control" href="#carousel" data-slide="prev">
                 <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
             </a>
        </div>
    <nova>
      <div class="container-fluid">
            <div class="row">
                <div class="embed-responsive embed-responsive-16by9">
                    <video id="accueil" autoplay loop> 
                        <source src="{{ asset('/assets/video/vd2.mp4') }}"  type="video/mp4">
                        <source src="{{ asset('/assets/video/vd2.ogv') }}"  type="video/mp4">
                        <source src="{{ asset('/assets/video/vd2.mp4') }}"  type="video/mp4">
                    </video>
                    <div class="video-overlay">
                        <div class="col-lg-12 col-md-12 col-sm-12 wrap">
                            <h1>Un monde prospère et différent</h1>
                            <div class="btn b"><a href="#articles">Mes Articles </a></div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>
      </nova>
        <div class="container r contain retrace" >
                <nova><div class="jumbotron row " id="articles" ></nova>
                <h2 class="text-center" ><span class="glyphicon glyphicon-list-alt"></span> {{ articles|length  }} Articles </h2>
            </div>
        </div>  
      <div class="container espace">
          <div class="jumbotron row">
              {% for article in articles %}
              <article>
                    <header class="text-center">
                          <h2 class="text-center"><strong>{{ article.title }}</strong></h2>
                          <div>
                         Le {{ article.date|date("d/m/Y")}} <span class="glyphicon glyphicon-time"> </span> {{ article.date|date("H:i:s")}}<br/> Publié par <a href="{{ path('about') }}">Jean-Forteroche</a>
                          </div>
                    </header>
                        <p> {{ article.content|truncate(285, true)|raw}}</p>
              </article>
              <p>
                <a href="{{ path('article', { 'id': article.id }) }}"><div class="btn e">Voir plus</div></a>
              </p>
              <hr/>
              {% endfor %}
          </div>
    </div>
{% include "footer.html.twig" %}
{% endblock %}
